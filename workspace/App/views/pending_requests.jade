// Jade file to specify output of an actors list
// Inherits from layout
extend layout
block content
  br
  a.nav_link(href='/friend_request') Send Friend Request
  br
  br
  br
  p
    | #{title}:
  
    table
    tr
      td TripID/FriendRequest
      td RequestedBy
      td Accept
    
    for request in requests
      tr
        if request.T_ID
          td= request.T_ID
          td= request.INVITED_BY
        else
          td FriendRequest
          td= request.REQUESTED_BY
        td 
          form(method='get', action='/accept_request')
            input(type='hidden', name='tid', value=request.T_ID)
            input(type='hidden', name='uid', value=uid)
            input(type='hidden', name='fuid', value=fuid)
            input(type='submit', value='Accept')
    
    
